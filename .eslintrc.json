{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": {
    "jest": true,
    "react-native/react-native": true
  },
  "plugins": ["react", "react-native", "prettier", "flowtype"],
  "parser": "babel-eslint",
  "rules": {
    "───────────────────── ↓↓↓↓ defaults ↓↓↓↓ ───────────────────────────": "",
    "react/jsx-filename-extension": [0],
    "react/forbid-prop-types": [ 1, { "forbid": ["array", "object"] } ],
    "react/jsx-indent": [1, 2],
    "react/jsx-indent-props": [1, 2],
    "import/no-extraneous-dependencies": [ 2, { "devDependencies": true } ],
    "───────────────────── ↓↓↓↓ flowtype ↓↓↓↓ ───────────────────────────": "",
    "flowtype/no-weak-types": 0,
    "flowtype/delimiter-dangle": [ 0, "never" ],
    "flowtype/object-type-delimiter": [ 0, "semicolon" ],
    "flowtype/require-readonly-react-props": 0,
    "────────────": "",
    "flowtype/define-flow-type": 2,
    "flowtype/use-flow-type": 2,
    "flowtype/valid-syntax": 2,
    "flowtype/require-return-type": [ 2, "always",
      { "annotateUndefined": "never" } ],
    "flowtype/boolean-style": [ 2, "boolean" ],
    "flowtype/generic-spacing": [ 2, "never" ],
    "flowtype/no-mixed": 2,
    "flowtype/no-primitive-constructor-types": 2,
    "flowtype/no-types-missing-file-annotation": 2,
    "flowtype/require-parameter-type": 2,
    "flowtype/require-valid-file-annotation": 2,
    "flowtype/semi": [ 2, "always" ],
    "flowtype/space-after-type-colon": [ 2, "always" ],
    "flowtype/space-before-generic-bracket": [ 2, "never" ],
    "flowtype/space-before-type-colon": [ 2, "never" ],
    "flowtype/type-id-match": [ 2, "^([A-Z][a-z0-9]+)+$" ],
    "flowtype/union-intersection-spacing": [ 2, "always" ],
    "───────────────────── ↓↓↓↓ disabled ↓↓↓↓ ───────────────────────────": "",
    "import/no-useless-path-segments": 0,
    "camelcase": 0,
    "react/prop-types": 0,
    "react/jsx-pascal-case": 0,
    "no-tabs": 0,
    "indent": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle": 0,
    "computed-property-spacing": 0,
    "quote-props": 0,
    "function-paren-newline": 0,
    "import/no-named-as-default": 0,
    "default-case": 0,
    "react/prefer-stateless-function": 0,
    "class-methods-use-this": 0,
    "react/no-array-index-key": 0,
    "no-return-assign": 0,
    "react/no-unescaped-entities": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "no-plusplus": 0,
    "no-nested-ternary": 0,
    "no-console": 0,
    "linebreak-style": 0,
    "import/no-cycle": 0,
    "global-require": 0,
    "───────────────────── ↓↓↓↓ warning ↓↓↓↓ ───────────────────────────": "",
    "prefer-const": 1,
    "no-param-reassign": 1,
    "react/destructuring-assignment": 1,
    "no-shadow": 1,
    "import/no-unresolved": 1,
    "react/jsx-no-bind": 1,
    "no-useless-constructor": 1,
    "react/no-unused-prop-types": 1,
    "no-useless-escape": 1,
    "no-restricted-syntax": 1,
    "no-unused-vars": 1,
    "─────────────── ↓↓↓↓ prettier ↓↓↓↓ ────────────────────────────────": "",
    "prettier/prettier": [
      1,
      {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "jsxBracketSameLine": false,
        "bracketSpacing": true,
        "printWidth": 100
      }
    ]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}